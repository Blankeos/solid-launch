{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "files": {
    "includes": ["**", "!dist/**/*", "!**/*.js", "!**/*.cjs", "!**/*.mjs"]
  },
  "linter": {
    "enabled": true,
    "domains": {
      "solid": "recommended"
    },
    "rules": {
      "suspicious": {
        "noExplicitAny": "off",
        "noUnknownAtRules": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "complexity": {
        "noStaticOnlyClass": "off",
        "noUselessFragments": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "on",
          "options": {
            "attributes": ["classList", ".*Class"],
            "functions": ["clsx", "cva", "tw", "tw.*"]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "semicolons": "asNeeded"
    }
  }
}
